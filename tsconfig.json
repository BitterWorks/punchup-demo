{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "noEmit": false, // Change this to false or remove this line
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "server/api/main.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/utils/scripts/scenariogen.mjs"
  ]
}